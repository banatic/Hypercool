{
  "productName": "HyperCool",
  "version": "0.3.2",
  "identifier": "com.hypercool.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "HyperCool",
        "width": 1200,
        "height": 650,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEJCRkMyOTJFMDg1M0JFODAKUldTQXZsTUlMaW44dTZveGJaNk9tYkxzdVMyWU1GZitkaXd6Zk1aR3JzTmJ6SzFyZ3cxR0JzM1kK",
      "endpoints": [
        "https://raw.githubusercontent.com/banatic/Hypercool/refs/heads/main/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    },
    "deep-link": {
      "schemes": [
        "hypercool"
      ]
    }
  }
}